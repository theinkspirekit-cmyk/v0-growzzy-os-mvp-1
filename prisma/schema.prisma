// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ═══════════════════════════════════════════════════
// AUTHENTICATION & USERS
// ═══════════════════════════════════════════════════

model User {
  id                    String                 @id @default(cuid())
  email                 String                 @unique
  name                  String?
  password              String
  emailVerified         Boolean                @default(true)
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  
  // Relations
  platformConnections   PlatformConnection[]
  campaigns             Campaign[]
  reports               Report[]
  sessions              Session[]
  leads                 Lead[]
  creatives             Creative[]
  automations           Automation[]
  insights              Insight[]
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String   @unique
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  
  @@index([userId])

}

// ═══════════════════════════════════════════════════
// PLATFORM CONNECTIONS
// ═══════════════════════════════════════════════════

model PlatformConnection {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  platform        String    // meta, google, shopify, linkedin
  accessToken     String    @db.Text
  refreshToken    String?   @db.Text
  expiresAt       DateTime?
  
  accountId       String?
  accountName     String?
  accountInfo     Json?
  
  active          Boolean   @default(true)
  connectedAt     DateTime  @default(now())
  lastSyncedAt    DateTime?
  
  campaigns       Campaign[]
  
  @@unique([userId, platform])
  @@index([userId])

}

// ═══════════════════════════════════════════════════
// CAMPAIGNS & ANALYTICS
// ═══════════════════════════════════════════════════

model Campaign {
  id                  String              @id @default(cuid())
  userId              String
  user                User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  connectionId        String
  connection          PlatformConnection  @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  
  platform            String
  platformCampaignId  String
  
  name                String
  status              String  // ACTIVE, PAUSED, ARCHIVED
  objective           String?
  
  // Metrics
  spend               Decimal             @default(0) @db.Decimal(10, 2)
  revenue             Decimal             @default(0) @db.Decimal(10, 2)
  impressions         Int                 @default(0)
  clicks              Int                 @default(0)
  conversions         Int                 @default(0)
  ctr                 Decimal?            @db.Decimal(5, 2)
  cpc                 Decimal?            @db.Decimal(10, 2)
  cpm                 Decimal?            @db.Decimal(10, 2)
  roas                Decimal?            @db.Decimal(10, 2)
  bounceRate          Decimal?            @db.Decimal(5, 2)
  
  // Demographics
  ageGenderData       Json?               // Store age/gender breakdown
  sourceData          Json?               // Store traffic sources
  
  startDate           DateTime?
  endDate             DateTime?
  lastUpdated         DateTime            @default(now())
  createdAt           DateTime            @default(now())
  
  leads               Lead[]

  @@unique([platformCampaignId, platform])
  @@index([userId])
  @@index([platform])
}

// ═══════════════════════════════════════════════════
// LEADS & CRM
// ═══════════════════════════════════════════════════

model Lead {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  campaignId  String?
  campaign    Campaign? @relation(fields: [campaignId], references: [id])
  
  firstName   String?
  lastName    String?
  email       String?
  phone       String?
  company     String?
  
  status      String    @default("NEW") // NEW, CONTACTED, QUALIFIED, WON, LOST
  source      String?   // Facebook, Google, Manual
  score       Int       @default(0)     // AI Score 0-100
  value       Decimal?  @db.Decimal(10, 2)
  
  aiInsights  Json?     // Stored AI predictions/recommendations
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([userId])
  @@index([status])
}

// ═══════════════════════════════════════════════════
// AI CREATIVES
// ═══════════════════════════════════════════════════

model Creative {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type        String   // IMAGE, TEXT, VIDEO
  platform    String   // Facebook, LinkedIn, etc.
  
  content     Json     // The actual content (text, image URL, etc.)
  
  aiScore     Int?
  status      String   @default("DRAFT") // DRAFT, SAVED, PUBLISHED
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
}

// ═══════════════════════════════════════════════════
// AUTOMATIONS
// ═══════════════════════════════════════════════════

model Automation {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name        String
  trigger     String   // e.g., "ROAS_DROP"
  condition   Json     // e.g., { "details": "ROAS < 1.0" }
  action      String   // e.g., "PAUSE_CAMPAIGN"
  
  active      Boolean  @default(true)
  lastRun     DateTime?
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
}

// ═══════════════════════════════════════════════════
// AI INSIGHTS
// ═══════════════════════════════════════════════════

model Insight {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  description String
  type        String   // WARNING, OPPORTUNITY, INFO
  severity    String   // HIGH, MEDIUM, LOW
  
  metric      String?
  value       String?
  change      String?
  
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  @@index([userId])
}

// ═══════════════════════════════════════════════════
// REPORTS
// ═══════════════════════════════════════════════════

model Report {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title           String
  type            String    @default("analytics")
  
  dateFrom        DateTime
  dateTo          DateTime
  
  // Report data (matches the image structure)
  data            Json      // Contains all metrics, charts data
  
  // File
  fileUrl         String?
  fileName        String?
  pdfBase64       String?   @db.Text
  
  createdAt       DateTime  @default(now())
  
  @@index([userId])

}
